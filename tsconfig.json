{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "jsx": "react",
    "outDir": "./dist",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "./lib/*",
    "./src/*"
  ]
}
